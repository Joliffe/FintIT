@model FindIt.Models.empresa
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LogedLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Enterprise Manager</title>
</head>
<body>
    <div id="login_View">
        @using (Html.BeginForm("Create", "Enterprise", FormMethod.Post,new {enctype="multipart/form-data"}))
        {

            <div class="modal-dialog empresa" id="">
                <div class="loginmodal-container empresa" id="" style="display:inline-block">
                    <h1>Edit your enterprise</h1><br>
                    <form>
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-4" style="display:inline-block">
                                    @Html.LabelFor(model => model.nombre)
                                    <br>
                                    @Html.EditorFor(model => model.nombre)
                                    <br>
                                    @Html.ValidationMessageFor(model => model.nombre)
                                    <br>
                                    @Html.LabelFor(model => model.provincia)
                                    <br>
                                    @Html.EditorFor(model => model.provincia)
                                    <br>
                                    @Html.ValidationMessageFor(model => model.provincia)
                                    <br>
                                    @Html.LabelFor(model => model.propietario)
                                    <br>
                                    @Html.EditorFor(model => model.propietario)
                                    <br>
                                    @Html.ValidationMessageFor(model => model.propietario)
                                    <br>
                                    @Html.LabelFor(model => model.descripcion)
                                    <br>
                                    @Html.EditorFor(model => model.descripcion)
                                    <br>
                                    @Html.ValidationMessageFor(model => model.descripcion)
                                    <br>
                                </div>
                                <div class="col-sm-4" style="display:inline-block">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.imagen, new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input type="file" id="img" name="img" onchange="LoadImage(this)" />
                                            
                                            <br>
                                            <img id="Image" src="#" alt="your image" />
                                        </div>
                                        
                                    </div>

                                </div>
                            </div>
                        </div>
                        
                        @*<label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>*@
                        <input type="submit" name="login" class="login loginmodal-submit" value="Save Changes">
                    </form>
                </div>
            </div>
        }
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>